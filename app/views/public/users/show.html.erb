  <%= link_to bulletin_board.title, bulletin_board_path(bulletin_board.id) %>
  <%= bulletin_board.content %>
  <%= link_to "削除", bulletin_board_path(bulletin_board), method: :delete %>
<% end %>

<%= link_to "いいね", bulletin_board_like_path(@user.id) %>

