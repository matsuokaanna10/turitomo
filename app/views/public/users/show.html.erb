<h1>マイページ</h1>
名前
<%= @user.name %>
<%= image_tag @user.image.to_s, size:"100x100" %>
紹介文
<%= @user.introduction %>
性別
<%= @user.sex %>
<% if @user = current_user %>
  <%= link_to "編集する", edit_user_path %>
<% end %>

投稿一覧
<% @bulletin_boards.each do |bulletin_board| %>
  <%= link_to bulletin_board.title, bulletin_board_path(bulletin_board.id) %>
  <%= bulletin_board.content %>
  <%= link_to "削除", bulletin_board_path(bulletin_board), method: :delete %>
<% end %>

<%= link_to "いいね一覧", bulletin_board_likes_path(bulletin_board_id: @user.bulletin_boards.ids, user_id: @user.id) %>

<% if current_user.following?(@user) && @user.id != current_user.id %>
  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
<% elsif @user.id != current_user.id %>
  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
<% end %>
フォロー数
<%= @user.followings.count %>
フォロワー数
<%= @user.followers.count %>

通知
<%= link_to "通知", notifications_path %>

<%= link_to "退会する", unsubscribe_user_path, class: "btn btn-danger" %>


