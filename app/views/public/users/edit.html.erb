<p id="notice">
<div class="container-md">
    <div class="row">
      <div class="col-md-12">
<%= form_with model: @user, url:user_path, method: :patch, local:true do |f| %>
<table>
  <tr>
    <th><%= f.label :"名前" %></th>
  <td><%= f.text_field :name %></td>
  </tr>
  <tr>
  <th><%= f.label :"画像" %></th>
  <td><%= f.file_field :image %></td>
  </tr>
  <tr>
  <th><%= f.label :"プローフィール" %></th>
  <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
  <div class="sex-field">
    <th><%= f.label :"性別" %></th>
    <td><%= f.label :man  %>
    <%= f.radio_button :sex, :man %>
    <%= f.label :woman  %>
    <%= f.radio_button :sex, :woman %></td>
  </div>
  </tr>
  <tr>
    <th></th>
    <td><%= f.submit '変更する' %></td>
  </tr>
</table>
<% end %>
</div>
</div>
</div>